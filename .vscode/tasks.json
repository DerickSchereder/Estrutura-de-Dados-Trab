{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Trab-ED-Arvores",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",

                // pega TODOS os .c da pasta src
                "${workspaceFolder}/src/*.c",

                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/src/output/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}